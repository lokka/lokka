%h2= t.listing_upload_files
%table
  %tr
    %th= t.upload_file.title
    %th= t.upload_file.name
    %th= t.upload_file.created_at
    %th= t.upload_file.filesize
    %th= t.upload_file.filetype
    %th{:colspan => 2}
  - @upload_files.each_with_index do |upload_file, i|
    %tr{:class => (i+1).odd? ? 'odd' : 'even'}
      %td
        %a{:href => "/admin/upload_files/#{upload_file.id}/edit"}=h upload_file.title
      %td
        %a{:href => "/upload_files/#{upload_file.path}/#{upload_file.name}"}=h upload_file.name
      %td= l upload_file.created_at.to_time
      %td= upload_file.file_readable_size
      %td= upload_file.filetype
      %td
        %a.button{:href => "/admin/upload_files/#{upload_file.id}/edit"}= t.edit
      %td
        = link_to t.delete, "/admin/upload_files/#{upload_file.id}", :class => 'button', :confirm => t.are_you_sure, :method => :delete
