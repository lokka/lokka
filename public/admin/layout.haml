!!!
%html
  %head
    %meta{'http-equiv' => 'Content-Type', 'content' => 'text/html; charset=utf-8'}
    %meta{'http-equiv' => 'Content-Style-Type', 'content' => 'text/css'}
    %meta{'http-equiv' => 'Content-Script-Type', 'content' => 'text/javascript'}
    %title== #{@site.title} - Lokka
    %link{:rel => 'shortcut icon', :href => '/admin/favicon.ico'}
    %link{:rel => 'stylesheet', :href => '/admin/css/style.css', :type => 'text/css'}
    %link{:rel => 'stylesheet', :href => '/admin/css/jquery.cleditor.css', :type => 'text/css'}
    %script{:src => "http://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js", :type => "text/javascript"}
    %script{:src => "/admin/js/jquery.cleditor.min.js", :type => "text/javascript"}
    %script{:src => "/admin/js/editor.js", :type => "text/javascript"}
    - head_last = yield_content :head_last
    - unless head_last.blank?
      = head_last
  %body
    #header
      %h1
        %a{:href => '/'}= @site.title
      #nav
        %ul
          - if logged_in?
            %li= link_to current_user.name, "/admin/users/#{current_user.id}/edit"
            %li
              %a{:href => '/admin/logout'}= t.logout
          - else
            %li
              %a{:href => '/admin/login'}= t.login
    #content
      #aside
        %ul
          - menu_titles = %w(dashboard post page comment category tag user snipet theme plugin setting)
          - admin_menu.each do |menu|
            - if menu[:parent][:link] != ''
              %li{:class => "#{menu[:name]} parent"}
                %h3
                  %a{:href => "#{menu[:parent][:link]}"}= t.send menu[:parent][:title]
                - if menu[:children].size > 0
                  %ul
                    - menu[:children].each do |menu_child|
                      %li{:class => "#{menu_child[:class]}"}
                        %a{:href => "#{menu_child[:link]}"}= t.send menu_child[:title]
            - else
              %li{:class => "#{menu[:name]} parent"}
                %h3.title= t.send menu[:parent][:title]
                - if menu[:children].size > 0
                  %ul
                    - menu[:children].each do |menu_child|
                      %li{:class => "#{menu_child[:class]}"}
                        %a{:href => "#{menu_child[:link]}"}= t.send menu_child[:title]
          - admin_aside = yield_content :admin_aside
          - unless admin_aside.blank?
            = admin_aside
      #main
        - if flash[:notice]
          #notice
            %p= flash[:notice]
        = yield
    #footer
      %a{:href => 'http://lokka.org/'} Lokka
