<% unless index? %>
<h2><%= @title %></h2>
<% end %>
<div class="section articles">
<% @posts.each do |post| %>
  <div class="section article">
    <div class="header">
      <h3><a href="<%= url(post.link) %>"><%= post.title %></a></h3>
      <ul class="info">
        <li class="date"><%= l post.created_at, :format => :long %></li>
        <% unless post.category.nil? %>
        <li class="category"><a href="<%= url(post.category.link) %>"><%= post.category.title %></a></li>
        <% end %>
        <% unless post.tags.size.zero? %>
        <li class="tags"><%= post.tags_to_html %></li>
        <% end %>
        <li class="author"><%= post.user.name %></li>
      </ul>
    </div>
    <div class="body">
      <%= post.body %>
    </div>
    <div class="footer">
      <% if logged_in? %>
      <p><a href="<%= url(post.edit_link) %>"><%= t('edit') %></a></p>
      <% end %>
    </div>
  </div>
<% end %>
  <div class="pager">
    <ul>
      <% if @posts.pager.previous_page %>
      <li class="previous"><a href="?page=<%= @posts.pager.previous_page %>">Newer</a></li>
      <% end %>
      <% if @posts.pager.next_page %>
      <li class="next"><a href="?page=<%= @posts.pager.next_page %>">Older</a></li>
      <% end %>
    </ul>
  </div>
</div>
