<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="ja" lang="ja">
  <head>
    <meta content="text/html; charset=utf-8" http-equiv="Content-Type" />
    <meta content="text/css" http-equiv="Content-Style-Type" />
    <meta content="text/javascript" http-equiv="Content-Script-Type" />
    <% if entry? %>
        <title><%= @entry.title %> - <%= @site.title %></title>
    <% else %>
        <title><%= @site.title %></title>
    <% end %>
    <meta name="description" content="<%= @site.meta_description %>" />
    <meta name="keywords" content="<%= @site.meta_keywords %>" />
    <link rel="stylesheet" href="<%= @theme.path %>/style.css" type="text/css" />
    <script type="text/javascript" src="<%= @theme.path %>/js/jquery.js"></script>
    <script type="text/javascript" src="<%= @theme.path %>/js/curvy.js"></script>
    <%= header %>
  </head>

  <body>
    <div id="wrapper">
       <div id="tagline">
        <%= @site.description %>
        <%= partial "admin_menu", theme: "curvy" %>
      </div>

      <div id="content_wrapper">
        <div id="main_cont">
          <div id="header">
            <h1 id="site_title">
              <%= link_to @site.title, url("/") %>
            </h1>
          </div>
           <div id="bread_crumb">
            <%= bread_crumb %>
          </div>
          <div id="posts">
            <%= yield %>
          </div>
        </div>

        <div id="sub_cont">
          <%= partial "side", theme: "curvy" %>
        </div>
      </div>

      <div id="footer">
        Copyright© <%= @site.title %> All Rights Reserved　-　Powered by <%= link_to "Lokka", "http://lokka.org/", id: "lokka_link" %>
      <div>
    </div>

  </body>
</html>

