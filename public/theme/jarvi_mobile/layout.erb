<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html>
  <head>
    <meta content="text/html; charset=utf-8" http-equiv="Content-Type" />
    <meta content="text/css" http-equiv="Content-Style-Type" />
    <meta content="text/javascript" http-equiv="Content-Script-Type" />
<% if entry? %>
    <title><%= @entry.title %> - <%= @site.title %></title>
<% else %>
    <title><%= @site.title %></title>
<% end %>
    <meta name="description" content="<%= @site.meta_description %>" />
    <meta name="keywords" content="<%= @site.meta_keywords %>" />
    <meta content="width=device-width, height=device-height, initial-scale=1.0" name="viewport">
    <link rel="shortcut icon" href="<%= @theme.path %>/favicon.ico" />
    <link rel="alternate" href="<%= url('/index.atom') %>" type="application/atom+xml" />
    <link rel="stylesheet" href="<%= @theme.path %>/style.css" type="text/css" />
    <%= header %>
  </head>
  <body class="<%= @theme_types.join(' ') %>">
    <div id="header">
      <h1><a href="<%= url('/') %>"><%= @site.title %></a></h1>
      <div class="section">
        <div class="bread_crumbs">
          <%= bread_crumb %>
        </div>
      </div>
    </div>

      <div id="main">
        <%= yield %>
      </div>
      <div id="aside">
        <dl>
          <dt><%= t('recent_entries') %></dt>
          <dd>
            <ul>
              <% Post.recent(5).each do |post| %>
                <li><a href="<%= url(post.link) %>"><%= post.title %></a></li>
              <% end %>
            </ul>
          </dd>
          <% if Page.count > 0 %>
            <dt><%= t('pages') %></dt>
            <dd>
              <ul>
                <% Page.all.each do |page| %>
                  <li><a href="<%= url(page.link) %>"><%= page.title %></a></li>
                <% end %>
              </ul>
            </dd>
          <% end %>
          <% if Tag.count > 0 %>
      	  <dt><%= t('tags') %></dt>
          <dd>
      		  <ul>
			        <% Tag.all.each do |tag| %>
				        <li><%= link_to tag.name, url(tag.link) %></li>				
			        <% end %>
		        </ul>
          </dd>
          <% end %>
          <% if Comment.count > 0 %>
    	    <dt><%= t('recent_comments') %></dt>
          <dd>
    		    <ul>
		          <% Comment.recent.each do |comment| %>
			          <li><%= link_to truncate(strip_tags(comment.body), :length => 16), (comment.link) %></li>				
		          <% end %>
	          </ul>
          </dd>
           <% end %>
        </dl>
      </div>
    </div>



    <div id="footer">
      <div class="copy"><a href="<%= url('/') %>"><%= @site.title %></a></div>
      <div class="poweredby">powered by <a href="http://lokka.org/">Lokka</a></div>
      <div class="switch"><a href="?theme=pc">PC Theme</a></div>
    </div>
    <%= footer %>
  </body>
</html>
