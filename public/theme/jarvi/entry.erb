<div class="article section">
  <div class="header">
    <h2 class="title"><a href="<%= @entry.link %>"><%= @entry.title %></a></h2>
  </div>
  <div class="body">
    <%= @entry.body %>
  </div>
  <div class="footer">
    <div class="created_at"><%= rl @entry.created_at.to_time %></div>
<% if logged_in? %>
    <p><a href="<%= @entry.edit_link %>"><%= rt.edit %></a></p>
<% end %>    
  </div>
</div>
